{
  "$schema": "https://json.schemastore.org/prettierrc.json",
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": ["*.astro", "*.md"],
      "options": {
        "proseWrap": "always"
      }
    },
    {
      "files": ["*.astro"],
      "options": {
        "parser": "astro"
      }
    }
  ]
}
