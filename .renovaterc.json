{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": ["davide"],
  "extends": [
    "config:best-practices",
    "customManagers:biomeVersions",
    "customManagers:githubActionsVersions",
    ":maintainLockFilesWeekly",
    ":semanticCommits"
  ],
  "kubernetes": {
    "managerFilePatterns": ["/kubernetes/.+\\.yaml$/"]
  },
  "packageRules": [
    {
      "automerge": true,
      "matchFileNames": [".devcontainer/**", ".forgejo/**"],
      "matchUpdateTypes": ["digest", "minor", "patch", "pin"]
    },
    {
      "automerge": true,
      "matchFileNames": ["Dockerfile"],
      "matchUpdateTypes": ["digest", "minor", "patch", "pin"],
      "semanticCommitType": "fix"
    },
    {
      "automerge": true,
      "matchPackageNames": ["@astro/check", "@biomejs/biome", "prettier*"],
      "matchUpdateTypes": ["digest", "minor", "patch", "pin"]
    },
    {
      "matchPackageNames": ["typescript"],
      "semanticCommitType": "chore"
    },
    {
      "automerge": true,
      "matchPackageNames": ["git.zarantonello.dev/university/notes"]
    }
  ]
}
